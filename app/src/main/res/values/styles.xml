<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Widget.App.Toolbar.Primary" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.App.Toolbar.Primary" parent="Base.Widget.App.Toolbar.Primary" />

    <style name="Base.Widget.App.Toolbar.Surface" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.App.Toolbar.Surface" parent="Base.Widget.App.Toolbar.Surface" />

    <style name="Widget.App.Toolbar.PrimarySurface" parent="Widget.App.Toolbar.Primary" />

    <style name="ShapeAppearanceOverlay.App.CornerSize40Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40%</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme">

        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">@color/drawer_item_selected</item>

        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">@color/drawer_item_bg_selected</item>


    </style>



    <style name="TextInputLayoutOutlinedBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="boxCornerRadiusBottomEnd">3dp</item>
        <item name="boxCornerRadiusBottomStart">3dp</item>
        <item name="boxCornerRadiusTopEnd">3dp</item>
        <item name="boxCornerRadiusTopStart">3dp</item>
        <item name="boxStrokeColor">@android:color/black</item>
        <item name="android:textColorHint">#777777</item>
        <item name="hintTextColor">@android:color/black</item>
    </style>



</resources>
